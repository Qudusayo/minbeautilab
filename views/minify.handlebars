<!-- Navigation -->
<nav class="navbar navbar-light text-center bg-light static-top">
  <div class="container">
    <a class="navbar-brand" href="#">Minifier</a>
  </div>
  <div class="container">
    <a class="btn btn-primary" href="#">Home</a>
    <a class="btn btn-danger" href="#">Minify</a>
    <a class="btn btn-success" href="#">Beautify</a>
  </div>
</nav>
<!-- Masthead -->
<header class="masthead text-white text-center">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-xl-9 mx-auto">
        <h1 class="mb-5">Minify any HTML / CSS / Javascript / JSON page</h1>
      </div>
      <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
        <form action="minify" method="POST">
          <div class="form-row">
            <div class="col-12 col-md-9 mb-2 mb-md-0">
              <input type="url" class="form-control form-control-lg"
                placeholder="https://www.example.com/files.(html/css/js)" name="url">
            </div>
            <div class="col-12 col-md-3">
              <button type="submit" class="btn btn-block btn-lg btn-primary">Minify</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</header>


<!-- Image Showcases -->
<section class="showcase showcaser">
  <form method="POST" action="/minify">
    <div class="col-md-5 mb-3 ml">

      <label for="country"><strong>CONTENT TYPE</strong></label>
      <select name="lang" class="custom-select d-block w-100" id="country" required="">
        <option value="" hidden>CONTENT TYPE</option>
        <option>HTML</option>
        <option>CSS</option>
        <option>Javascript</option>
        <option>JSON</option>
      </select>
      <div class="invalid-feedback">
        Please select a valid country.
      </div>
    </div>
    <div class="container-fluid p-0">
      <div class="row no-gutters">

        <div class="col-lg-6 order-lg-1 text-white showcase-img"
          style="background-image: url('img/bg-showcase-2.jpg');">
          <textarea id="input" name="input" placeholder="Your input here" spellcheck="false">{{input}}</textarea>
        </div>
        <div class="col-lg-6 order-lg-2 text-white showcase-img"
          style="background-image: url('img/bg-showcase-2.jpg');">
          <textarea name="output" spellcheck="false">{{output}}</textarea>

        </div>
      </div><button type="submit" class="btn btn-block btn-lg btn-danger">Minify</button>
  </form>
</section>